				.imgs__list-item.img(data-src="upload/clinic-1.jpg" data-fancybox="clinic" style="background-image: url('upload/clinic-1.jpg')")
				.imgs__list-item.img(data-src="upload/clinic-1.jpg" data-fancybox="clinic" style="background-image: url('upload/clinic-1.jpg')")
