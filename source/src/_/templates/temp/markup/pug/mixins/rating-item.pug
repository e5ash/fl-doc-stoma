mixin ri(img, count, stars, link, imgs)
	.rating__item.ri
		.ri__head.row.i-mid
			.ri__img
				+img('logos/' + img)
			.ri__count
				.ri__count-wrap
					- var starsGray   = 5 - stars
					- var starsYellow = 5 - starsGray
					- var i = 0
					- while(i < starsYellow)
						+icon('star-yellow')
						- i++
					- var i = 0
					- while(i < starsGray)
						+icon('star-gray')
						- i++
				.ri__count-title= "Оценка: " + count
			a.ri__btn.btn.--bg-blue.--shadow-blue.--md(href=link, target="_blank") Все отзывы
		.ri__body
			.ri__list.chevrons.--gray.--sm
				each img in imgs
					.ri__item(data-fancybox="" data-src='upload/reviews/' + img)
						+img('reviews/' + img)
